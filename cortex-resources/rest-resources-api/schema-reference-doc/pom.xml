				<artifactId>api-generator-maven-plugin</artifactId>
				<executions>
					<execution>
						<goals>
							<goal>generate-docs</goal>
						</goals>
					</execution>
				</executions>
				<configuration>
					<generatedHtmlFileName>resource_reference_guide.html</generatedHtmlFileName>
				</configuration>
			</plugin>
			<plugin>
				<artifactId>maven-assembly-plugin</artifactId>
				<executions>
					<execution>
						<id>make-assembly</id>
						<phase>package</phase>
						<goals>
							<goal>single</goal>
						</goals>
						<configuration>
							<appendAssemblyId>false</appendAssemblyId>
							<descriptors>
