<?xml version="1.0"?>
<definitions xmlns="http://www.elasticpath.com/schema/rest/0.5">

	<family>
		<name>searches</name>
		<plan>
			<name>offer-search</name>
			<description>
				<![CDATA[Retrieve offers with facets for the keywords in the search query, submitted using the form.]]>
			</description>
			<step>
				<description><![CDATA[The offer search form.]]></description>
				<start>searches</start>
				<follow-link>offersearchform</follow-link>
				<result>offersearches.offer-search-form</result>
			</step>
			<step>
				<description><![CDATA[The offer search form.]]></description>
				<start>offersearches.offer-search-form</start>
				<submit/>
				<to>offer-search-form</to>
				<via-link>offersearchaction</via-link>
				<result>offersearches.offer-search-result</result>
			</step>
			<step>
				<description><![CDATA[The offer.]]></description>
				<start>offersearches.offer-search-result</start>
				<follow-link>element</follow-link>
				<result>offers.offer</result>
			</step>
		</plan>

	</family>
</definitions>
