<beans
		xmlns="http://www.springframework.org/schema/beans"
		xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		xmlns:settings="http://www.elasticpath.com/schema/settings"

		xsi:schemaLocation="
			http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
			http://www.elasticpath.com/schema/settings http://www.elasticpath.com/schema/settings/settings.xsd
	">

	<bean id="purgeExpiredFailedOrdersBatchProcessor" parent="batchTxProxyTemplate">
		<property name="target" ref="purgeExpiredFailedOrdersBatchProcessorTarget"/>
	</bean>

	<bean id="purgeExpiredFailedOrdersBatchProcessorTarget" class="com.elasticpath.batch.jobs.impl.orders.PurgeExpiredFailedOrdersBatchProcessor">
		<property name="persistenceEngine" ref="batchPersistenceEngine"/>
	</bean>

	<bean id="expiredFailedOrdersCleanupJob" class="com.elasticpath.batch.jobs.impl.orders.PurgeExpiredFailedOrdersJob">
		<property name="persistenceEngine" ref="batchPersistenceEngine"/>
		<property name="timeService" ref="timeService"/>
		<property name="batchProcessor" ref="purgeExpiredFailedOrdersBatchProcessor" />
		<property name="configBatchSize">
			<settings:setting path="COMMERCE/SYSTEM/FAILEDORDERCLEANUP/batchSize"/><!-- default: 1000 -->
		</property>
		<property name="maxDaysHistory">
			<settings:setting path="COMMERCE/SYSTEM/FAILEDORDERCLEANUP/maxHistory"/><!-- default: 60 -->
		</property>
	</bean>
</beans>
