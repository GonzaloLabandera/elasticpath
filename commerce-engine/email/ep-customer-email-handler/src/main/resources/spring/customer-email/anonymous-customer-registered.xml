<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

	<bean id="anonymousCustomerRegisteredEmailProducerTemplate" class="com.elasticpath.email.handler.customer.producer.impl.AnonymousCustomerRegisteredEmailProducer"
		abstract="true">
		<property name="emailComposer" ref="emailComposer" />
		<property name="customerEmailPropertyHelper" ref="emailPropertyHelperCustomer" />
		<property name="customerService" ref="customerService" />
	</bean>

	<bean id="anonymousCustomerRegisteredEmailProducer" parent="anonymousCustomerRegisteredEmailProducerTemplate" />

	<bean id="anonymousCustomerRegisteredEmailHandlingRouteBuilderTemplate" parent="abstractEventMessageTriggeredEmailRouteBuilder"
		  abstract="true">
		<property name="routeId" value="anonymousCustomerRegisteredEmailHandler"/>
		<property name="incomingEndpoint">
			<bean parent="customerEventExternalEndpoint">
				<property name="camelContextId" value="ep-customer-email-handler" />
				<property name="context" value="anonymousCustomerRegisteredEmailHandler"/>
			</bean>
		</property>
		<property name="outgoingEndpoint">
			<bean parent="emailSendingEndpoint">
				<property name="camelContextId" value="ep-customer-email-handler" />
			</bean>
		</property>
		<property name="eventMessagePredicateFilter" ref="anonymousCustomerRegisteredEventTypePredicate" />
		<property name="emailProducer" ref="anonymousCustomerRegisteredEmailProducer" />
	</bean>

	<bean id="anonymousCustomerRegisteredEmailHandlingRouteBuilder" parent="anonymousCustomerRegisteredEmailHandlingRouteBuilderTemplate"/>

</beans>
