<?xml version="1.0" encoding="UTF-8"?>
<blueprint
		xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
		xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		xsi:schemaLocation="
			http://www.osgi.org/xmlns/blueprint/v1.0.0 http://www.osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd
		">

	<type-converters>
		<bean id="springBlueprintConverter" class="com.elasticpath.service.osgi.SpringBlueprintConverter"/>
	</type-converters>

	<reference id="settingsReader" availability="mandatory" interface="com.elasticpath.settings.SettingsReader"/>
	<reference id="jmsConnectionFactory"
			interface="javax.jms.ConnectionFactory"
			filter="(jndiName=jms/JMSConnectionFactory)"/>
	<reference id="jms" interface="org.apache.camel.Component"/>
	<reference id="jmsTransactionManager" interface="org.springframework.transaction.PlatformTransactionManager"/>
	<reference id="eventMessageDataFormat" interface="org.apache.camel.spi.DataFormat"/>
	<reference id="camelAnnotatedClassList" interface="java.util.Set"/>

	<service ref="customerEventMessagePublisher" interface="com.elasticpath.messaging.EventMessagePublisher">
		<service-properties>
			<entry key="name" value="customerEventMessagePublisher"/>
		</service-properties>
	</service>
	<service ref="customerEventTypeProvider" interface="com.elasticpath.messaging.spi.EventTypeProvider"/>

</blueprint>