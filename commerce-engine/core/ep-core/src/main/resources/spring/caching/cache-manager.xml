<?xml version="1.0" encoding="UTF-8"?>
<beans
		xmlns="http://www.springframework.org/schema/beans"
		xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
		">

	<import resource="simple-timeout-caches.xml" />

	<bean id="epCoreEhcacheManager" class="org.springframework.cache.ehcache.EhCacheManagerFactoryBean">

		<property name="cacheManagerName" value="#{applicationName}-CacheManager"/>
		<property name="shared" value="true"/>
	</bean>
</beans>