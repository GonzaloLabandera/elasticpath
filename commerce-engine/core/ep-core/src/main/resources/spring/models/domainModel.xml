	<bean id="creditCardValidator" class="com.elasticpath.commons.validator.impl.EpCreditCardValidator">
		<property name="creditCardTypes">
			<list value-type="">
				<bean id="validatorDinersClub" class="com.elasticpath.commons.validator.impl.EpCreditCardType">
					<property name="prefixes" value="300,301,302,303,304,305,36,38"/>
					<property name="supportedLengths" value="14"/>
				</bean>
				<bean id="validatorLaser" class="com.elasticpath.commons.validator.impl.EpCreditCardType">
					<property name="prefixes" value="6304,6706,6771,6709"/>
					<property name="supportedLengths" value="16,17,18,19"/>
				</bean>
				<bean id="validatorJCB" class="com.elasticpath.commons.validator.impl.EpCreditCardType">
					<property name="prefixes" value="35,1800,2131"/>
					<property name="supportedLengths" value="15,16"/>
				</bean>
			</list>
		</property>
	</bean>

