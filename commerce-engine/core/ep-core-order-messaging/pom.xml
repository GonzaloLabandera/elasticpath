<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
		 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		 xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>com.elasticpath</groupId>
		<artifactId>core</artifactId>
		<version>703.0.0-SNAPSHOT</version>
	</parent>

	<artifactId>ep-core-order-messaging</artifactId>
	<packaging>bundle</packaging>
	<name>Elastic Path Order Messaging</name>

	<dependencies>
		<dependency>
			<groupId>com.elasticpath</groupId>
			<artifactId>ep-base</artifactId>
		</dependency>
		<dependency>
			<groupId>com.elasticpath</groupId>
			<artifactId>ep-messaging-api</artifactId>
		</dependency>
		<dependency>
			<groupId>com.elasticpath</groupId>
			<artifactId>ep-messaging-camel</artifactId>
			<scope>runtime</scope>
		</dependency>
		<dependency>
			<groupId>org.apache.camel</groupId>
			<artifactId>camel-core</artifactId>
			<scope>runtime</scope>
		</dependency>
		<dependency>
			<groupId>org.apache.camel</groupId>
			<artifactId>camel-spring</artifactId>
			<scope>runtime</scope>
		</dependency>
		<dependency>
			<groupId>com.fasterxml.jackson.core</groupId>
			<artifactId>jackson-annotations</artifactId>
		</dependency>
		<dependency>
			<groupId>com.sun.xml.bind</groupId>
			<artifactId>jaxb-core</artifactId>
		</dependency>
		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
		</dependency>
	</dependencies>

	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.felix</groupId>
				<artifactId>maven-bundle-plugin</artifactId>
				<extensions>true</extensions>
				<configuration>
					<instructions>
						<Import-Package>
							javax.jms,
							com.elasticpath.commons.util.extenum,
							com.elasticpath.messaging,
							com.elasticpath.messaging.impl,
							com.elasticpath.messaging.camel,
							com.elasticpath.messaging.predicate.impl,
							com.elasticpath.messaging.spi,
							com.elasticpath.messaging.spi.impl,
							com.elasticpath.service.osgi,
							com.elasticpath.settings,
							com.elasticpath.settings.beanframework,
							com.elasticpath.settings.domain,
							com.fasterxml.jackson.annotation,
							org.apache.camel,
							org.apache.camel.component.bean,
							org.apache.camel.component.jackson,
							org.apache.camel.spi,
							org.apache.camel.spring,
							org.apache.camel.spring.spi,
							org.osgi.service.blueprint,
							org.springframework.beans.factory,
							org.springframework.transaction,
							com.sun.xml.bind,
							com.sun.xml.bind.v2.model.annotation
						</Import-Package>
					</instructions>
				</configuration>
			</plugin>
			<plugin>
				<artifactId>maven-checkstyle-plugin</artifactId>
			</plugin>
			<plugin>
				<artifactId>maven-pmd-plugin</artifactId>
			</plugin>
		</plugins>
	</build>
</project>