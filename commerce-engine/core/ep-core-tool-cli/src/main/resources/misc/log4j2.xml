<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
	<Appenders>
		<Console name="CONSOLE" target="SYSTEM_OUT">
			<PatternLayout pattern="%-5p %d{ISO8601} %c - %m%n" />
		</Console>
	</Appenders>
	<Loggers>
		<Logger name="com.elasticpath" level="info" additivity="false">
			<AppenderRef ref="CONSOLE" />
		</Logger>
		<Root level="warn">
			<AppenderRef ref="CONSOLE" />
		</Root>
	</Loggers>
</Configuration>