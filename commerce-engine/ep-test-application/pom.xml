				</configuration>
			</plugin>
			<plugin>
				<artifactId>maven-checkstyle-plugin</artifactId>
				<configuration>
					<configLocation>${checkstyle.itest.ruleset}</configLocation>
				</configuration>
			</plugin>
		</plugins>
