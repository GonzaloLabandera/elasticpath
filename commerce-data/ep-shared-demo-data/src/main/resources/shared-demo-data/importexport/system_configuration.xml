<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<system_configuration>
<configuration_setting>
    <name_space>COMMERCE/SYSTEM/ASSETS/assetLocation</name_space>
    <description>The path to the directory that contains assets required by the application, including images, theme files, and digital goods.</description>
    <default_value type="String">${ep.local.asset.path}</default_value>
    <max_overrides>1</max_overrides>
    <setting_metadata>
        <value key="environmentSpecific">false</value>
        <value key="apiRefreshStrategy">application</value>
    </setting_metadata>
</configuration_setting>

<configuration_setting>
    <name_space>COMMERCE/SYSTEM/ASSETS/importAssetsSubfolder</name_space>
    <description>The name of the subfolder within the assets directory that contains imported CSV files.</description>
    <default_value type="String">import</default_value>
    <max_overrides>1</max_overrides>
    <setting_metadata>
        <value key="environmentSpecific">false</value>
    </setting_metadata>
</configuration_setting>

<configuration_setting>
    <name_space>COMMERCE/SYSTEM/SEARCH/searchHost</name_space>
    <description>The search server's URL. If this is not set correctly, searching and browsing in the storefront and in Commerce Manager will not work. For a search server cluster, this setting must contain two values. The default value must be set to the load balancer URL. A defined value with the context set to 'master' must be set to the master search server URL.</description>
    <default_value type="url">${ep.search.url}</default_value>
    <max_overrides>1</max_overrides>
    <setting_metadata>
        <value key="environmentSpecific">true</value>
        <value key="apiRefreshStrategy">interval:timeout=COMMERCE/Cache/Cache_1</value>
    </setting_metadata>
</configuration_setting>

<configuration_setting>
    <name_space>COMMERCE/STORE/theme</name_space>
    <description>The theme associated with the store. (The name of the subfolder under the themes directory that contains the theme's templates, CSS files, and other resources.)</description>
    <default_value type="String">electronics</default_value>
    <max_overrides>-1</max_overrides>
    <setting_metadata>
        <value key="environmentSpecific">false</value>
        <value key="apiRefreshStrategy">interval:timeout=COMMERCE/Cache/Cache_2</value>
    </setting_metadata>
</configuration_setting>

<configuration_setting>
    <name_space>COMMERCE/STORE/CATALOG/catalogViewPagination</name_space>
    <description>The maximum number of items to display per page when browsing the catalog in the storefront.</description>
    <default_value type="Integer">20</default_value>
    <max_overrides>-1</max_overrides>
    <setting_metadata>
        <value key="environmentSpecific">false</value>
        <value key="apiRefreshStrategy">interval:timeout=COMMERCE/Cache/Cache_3</value>
        <value key="availableToMarketing">true</value>
    </setting_metadata>
</configuration_setting>

<configuration_setting>
    <name_space>COMMERCE/SYSTEM/CATALOG/catalogTopSellerCount</name_space>
    <description>The number of top seller products to display when browsing categories in the storefront. (The top seller job must also be enabled.)</description>
    <default_value type="Integer">2</default_value>
    <max_overrides>1</max_overrides>
    <setting_metadata>
        <value key="environmentSpecific">false</value>
        <value key="apiRefreshStrategy">interval:timeout=COMMERCE/Cache/Cache_3</value>
    </setting_metadata>
</configuration_setting>

<configuration_setting>
    <name_space>COMMERCE/SYSTEM/UNITS/weight</name_space>
    <description>The unit of measurement applying to all product weights. For example, KG or LB.</description>
    <default_value type="String">KG</default_value>
    <max_overrides>1</max_overrides>
    <setting_metadata>
        <value key="environmentSpecific">false</value>
    </setting_metadata>
</configuration_setting>

<configuration_setting>
    <name_space>COMMERCE/SYSTEM/SHIPPING/carriers</name_space>
    <description>The comma-delimited list of supported shipping carriers.</description>
    <default_value type="String">Fed Ex, UPS, Canada Post, Royal Mail</default_value>
    <max_overrides>1</max_overrides>
    <setting_metadata>
        <value key="environmentSpecific">false</value>
    </setting_metadata>
</configuration_setting>

<configuration_setting>
    <name_space>COMMERCE/SYSTEM/encryptionKey</name_space>
    <description>The encryption key used to encrypt credit card numbers. The key must be at least 25 characters long.</description>
    <default_value type="String">this must be changed in production</default_value>
    <max_overrides>1</max_overrides>
    <defined_values>
        <value>123456789012345678901234</value>
    </defined_values>
    <setting_metadata>
        <value key="environmentSpecific">true</value>
    </setting_metadata>
</configuration_setting>

<configuration_setting>
    <name_space>COMMERCE/SYSTEM/UNITS/length</name_space>
    <description>The unit of measurement applying to all product lengths. For example, CM or FT.</description>
    <default_value type="String">CM</default_value>
    <max_overrides>1</max_overrides>
    <setting_metadata>
        <value key="environmentSpecific">false</value>
    </setting_metadata>
</configuration_setting>

<configuration_setting>
    <name_space>COMMERCE/SYSTEM/EMAIL/emailAuthenticationUsername</name_space>
    <description>The username used to authenticate with the EmailService.</description>
    <default_value type="String">cmuser</default_value>
    <max_overrides>1</max_overrides>
    <setting_metadata>
        <value key="environmentSpecific">true</value>
    </setting_metadata>
</configuration_setting>

<configuration_setting>
    <name_space>COMMERCE/SYSTEM/EMAIL/emailTextTemplateEnabled</name_space>
    <description>Determines whether to use the plain text template for sending store emails. Set to true to use the plain text template or false to use the HTML template.</description>
    <default_value type="Boolean">false</default_value>
    <max_overrides>1</max_overrides>
    <setting_metadata>
        <value key="environmentSpecific">false</value>
    </setting_metadata>
</configuration_setting>

<configuration_setting>
    <name_space>COMMERCE/SYSTEM/EMAIL/emailGlobalSenderAddress</name_space>
    <description>The email address used to send out global, non store specific emails.</description>
    <default_value type="String">customerService@SomeDomain.com</default_value>
    <max_overrides>1</max_overrides>
    <setting_metadata>
        <value key="environmentSpecific">false</value>
    </setting_metadata>
</configuration_setting>

<configuration_setting>
    <name_space>COMMERCE/SYSTEM/EMAIL/emailAuthenticationPassword</name_space>
    <description>The password used to authenticate with the EmailService.</description>
    <default_value type="String">111111</default_value>
    <max_overrides>1</max_overrides>
    <setting_metadata>
        <value key="environmentSpecific">true</value>
    </setting_metadata>
</configuration_setting>

<configuration_setting>
    <name_space>COMMERCE/SYSTEM/EMAIL/emailGlobalSenderName</name_space>
    <description>The sender name used in global, non store specific emails.</description>
    <default_value type="String">Customer Service</default_value>
    <max_overrides>1</max_overrides>
    <setting_metadata>
        <value key="environmentSpecific">false</value>
    </setting_metadata>
</configuration_setting>

<configuration_setting>
    <name_space>COMMERCE/STORE/PRODUCTRECOMMENDATIONS/numberMaxRecommendations</name_space>
    <description>The maximum number of product recommendations to display.</description>
    <default_value type="Integer">3</default_value>
    <max_overrides>-1</max_overrides>
    <setting_metadata>
        <value key="environmentSpecific">false</value>
        <value key="availableToMarketing">true</value>
    </setting_metadata>
</configuration_setting>

<configuration_setting>
    <name_space>COMMERCE/SYSTEM/datafileEncoding</name_space>
    <description>The character encoding used to import CSV data files and to export data files and reports.</description>
    <default_value type="String">UTF-8</default_value>
    <max_overrides>1</max_overrides>
    <setting_metadata>
        <value key="environmentSpecific">false</value>
        <value key="apiRefreshStrategy">interval:timeout=COMMERCE/Cache/Cache_3</value>
    </setting_metadata>
</configuration_setting>

<configuration_setting>
    <name_space>COMMERCE/STORE/SEARCH/searchCategoriesFirst</name_space>
    <description>When set to true, searches in the storefront will search categories before searching products, and if a category match is found, the first matching category page is displayed instead of the search results page.</description>
    <default_value type="Boolean">true</default_value>
    <max_overrides>-1</max_overrides>
    <setting_metadata>
        <value key="environmentSpecific">false</value>
        <value key="apiRefreshStrategy">interval:timeout=COMMERCE/Cache/Cache_1</value>
        <value key="availableToMarketing">true</value>
    </setting_metadata>
</configuration_setting>

<configuration_setting>
    <name_space>COMMERCE/STORE/PRODUCTRECOMMENDATIONS/numberOrderHistoryDays</name_space>
    <description>The number of days of historical order data to use when calculating product recommendations. For example, if the value is 3, product recommendations are calculated based on all orders created during the past three days.</description>
    <default_value type="Integer">3</default_value>
    <max_overrides>-1</max_overrides>
    <setting_metadata>
        <value key="environmentSpecific">false</value>
        <value key="apiRefreshStrategy">interval:timeout=COMMERCE/Cache/Cache_3</value>
        <value key="availableToMarketing">true</value>
    </setting_metadata>
</configuration_setting>

<configuration_setting>
    <name_space>COMMERCE/STORE/CATALOG/featuredProductCountToDisplay</name_space>
    <description>The number of featured products to display when browsing a catalog with either no filters or only one filter applied.</description>
    <default_value type="Integer">2</default_value>
    <max_overrides>-1</max_overrides>
    <setting_metadata>
        <value key="environmentSpecific">false</value>
        <value key="apiRefreshStrategy">interval:timeout=COMMERCE/Cache/Cache_3</value>
        <value key="availableToMarketing">true</value>
    </setting_metadata>
</configuration_setting>

<configuration_setting>
    <name_space>COMMERCE/SYSTEM/localeDateFormat</name_space>
    <description>The format of date strings in import files.</description>
    <default_value type="String">EEE MMM dd HH:mm:ss yyyy</default_value>
    <max_overrides>1</max_overrides>
    <setting_metadata>
        <value key="environmentSpecific">false</value>
    </setting_metadata>
</configuration_setting>

<configuration_setting>
    <name_space>COMMERCE/SYSTEM/userIdMode</name_space>
    <description> Specifies how customer user IDs are created. If set to 1, the customer's email address is used. If set to 2, a unique ID is generated by some other means (through a customization). This should be set to 1 unless you have a customization that requires it.</description>
    <default_value type="Integer">1</default_value>
    <max_overrides>1</max_overrides>
    <setting_metadata>
        <value key="environmentSpecific">false</value>
        <value key="apiRefreshStrategy">application</value>
    </setting_metadata>
</configuration_setting>

<configuration_setting>
    <name_space>COMMERCE/STORE/CATALOG/catalogSitemapPagination</name_space>
    <description>The maximum number of products listed on a page in the sitemap.</description>
    <default_value type="Integer">90</default_value>
    <max_overrides>-1</max_overrides>
    <setting_metadata>
        <value key="environmentSpecific">false</value>
        <value key="availableToMarketing">true</value>
    </setting_metadata>
</configuration_setting>

<configuration_setting>
    <name_space>COMMERCE/SYSTEM/EMAIL/mailHost</name_space>
    <description>The host name of the email server.</description>
    <default_value type="String">${ep.smtp.host:localhost}</default_value>
    <max_overrides>1</max_overrides>
    <setting_metadata>
        <value key="environmentSpecific">true</value>
    </setting_metadata>
</configuration_setting>

<configuration_setting>
    <name_space>COMMERCE/SYSTEM/EMAIL/mailPort</name_space>
    <description>The listener port of the email server.</description>
    <default_value type="Integer">25</default_value>
    <max_overrides>1</max_overrides>
    <setting_metadata>
        <value key="environmentSpecific">true</value>
    </setting_metadata>
</configuration_setting>

<configuration_setting>
    <name_space>COMMERCE/STORE/FILTEREDNAVIGATION/attributeFilterEnabled</name_space>
    <description>True if attribute filtering is enabled for filtered navigation, false if not.</description>
    <default_value type="Boolean">true</default_value>
    <max_overrides>-1</max_overrides>
    <setting_metadata>
        <value key="environmentSpecific">false</value>
        <value key="apiRefreshStrategy">interval:timeout=COMMERCE/Cache/Cache_3</value>
    </setting_metadata>
</configuration_setting>

<configuration_setting>
    <name_space>COMMERCE/APPSPECIFIC/RCP/maximumPasswordAge</name_space>
    <description>The number of days after first logon before the user password expires. Note that the default value complies with PCI DSS security guidelines. Before changing this setting, make sure the change is compatible with your organization's PCI compliance policy.</description>
    <default_value type="Integer">${ep.maximum.password.age:90}</default_value>
    <max_overrides>1</max_overrides>
    <setting_metadata>
        <value key="environmentSpecific">true</value>
    </setting_metadata>
</configuration_setting>

<configuration_setting>
    <name_space>COMMERCE/APPSPECIFIC/RCP/minimumPasswordLength</name_space>
    <description> The minimum user password length. Note that the default value complies with PCI DSS security guidelines. Before changing this setting, make sure the change is compatible with your organization's PCI compliance policy.</description>
    <default_value type="Integer">8</default_value>
    <max_overrides>1</max_overrides>
    <setting_metadata>
        <value key="environmentSpecific">true</value>
    </setting_metadata>
</configuration_setting>

<configuration_setting>
    <name_space>COMMERCE/STORE/storefrontUrl</name_space>
    <description>The secure (HTTPS) storefront URL. This URL is used by the Commerce Manager client application for CSR login on behalf of customers. Certain customer service activities, such as editing orders, require the CSR to log in as the customer. The Commerce Manager client application uses this URL to perform the login. If the specified URL does not begin with {{https://}}, the login request will fail and the CSR will not be able to perform the action.</description>
    <default_value type="String">https://localhost:8443/storefront</default_value>
    <max_overrides>-1</max_overrides>
    <defined_values>
        <value context="SNAPITUP">https://demo.elasticpath.com:8443/storefront</value>
        <value context="SNAPITUPUK">https://snapitupuk.elasticpath.com:8443/storefront</value>
        <value context="SLRWORLD">https://slrworld.elasticpath.com:8443/storefront</value>
    </defined_values>
    <setting_metadata>
        <value key="environmentSpecific">true</value>
    </setting_metadata>
</configuration_setting>

<configuration_setting>
    <name_space>COMMERCE/SYSTEM/ASSETS/cmAssetsSubfolder</name_space>
    <description>The name of the subfolder within the assets directory that contains non store specific resources, such as email message templates.</description>
    <default_value type="String">cmassets</default_value>
    <max_overrides>1</max_overrides>
    <setting_metadata>
        <value key="environmentSpecific">false</value>
        <value key="apiRefreshStrategy">application</value>
    </setting_metadata>
</configuration_setting>

<configuration_setting>
    <name_space>COMMERCE/APPSPECIFIC/RCP/idleTimeForLock</name_space>
    <description>Number of minutes of inactivity before the Commerce Manager client is locked and the user is required to re-enter their password. Set to 0 to disable. Note that the default value complies with PCI DSS security guidelines. Before changing this setting, make sure the change is compatible with your organization's PCI compliance policy.</description>
    <default_value type="Integer">15</default_value>
    <max_overrides>1</max_overrides>
    <setting_metadata>
        <value key="environmentSpecific">true</value>
    </setting_metadata>
</configuration_setting>

<configuration_setting>
    <name_space>COMMERCE/APPSPECIFIC/RCP/accountLockoutThreshold</name_space>
    <description>The minimum number of unique passwords, including current CM user password, before the user can re-use a previous password. Note that the default value complies with PCI DSS security guidelines. Before changing this setting, make sure the change is compatible with your organization's PCI compliance policy.</description>
    <default_value type="Integer">6</default_value>
    <max_overrides>1</max_overrides>
    <setting_metadata>
        <value key="environmentSpecific">true</value>
    </setting_metadata>
</configuration_setting>

<configuration_setting>
    <name_space>COMMERCE/APPSPECIFIC/RCP/passwordHistoryLength</name_space>
    <description>Number of passwords without repetition including current CM user password</description>
    <default_value type="Integer">4</default_value>
    <max_overrides>1</max_overrides>
    <setting_metadata>
        <value key="environmentSpecific">true</value>
    </setting_metadata>
</configuration_setting>

<configuration_setting>
    <name_space>COMMERCE/Cache/Cache_3</name_space>
    <description>For each setting that is mapped to this cache, specifies the period of time (in milliseconds) during which the setting value is cached. At the end of the interval, the cached value is invalidated and the next time it is requested, the value is retrieved directly from the database and the cache is updated. The name of this setting can be used when specifying the refresh strategy for another setting. To assign a setting to this cache, set the value of that setting's refresh strategy metadata setting to interval:timeout=COMMERCE/Cache/Cache_3. For more information, see the Configuration section of the Commerce Manager User Guide.</description>
    <default_value type="Integer">100000</default_value>
    <max_overrides>1</max_overrides>
    <setting_metadata>
        <value key="environmentSpecific">true</value>
    </setting_metadata>
</configuration_setting>

<configuration_setting>
    <name_space>COMMERCE/Cache/Cache_2</name_space>
    <description>For each setting that is mapped to this cache, specifies the period of time (in milliseconds) during which the setting value is cached. At the end of the interval, the cached value is invalidated and the next time it is requested, the value is retrieved directly from the database and the cache is updated. The name of this setting can be used when specifying the refresh strategy for another setting. To assign a setting to this cache, set the value of that setting's refresh strategy metadata setting to interval:timeout=COMMERCE/Cache/Cache_2. For more information, see the Configuration section of the Commerce Manager User Guide.</description>
    <default_value type="Integer">60000</default_value>
    <max_overrides>1</max_overrides>
    <setting_metadata>
        <value key="environmentSpecific">true</value>
    </setting_metadata>
</configuration_setting>

<configuration_setting>
    <name_space>COMMERCE/Cache/Cache_1</name_space>
    <description>For each setting that is mapped to this cache, specifies the period of time (in milliseconds) during which the setting value is cached. At the end of the interval, the cached value is invalidated and the next time it is requested, the value is retrieved directly from the database and the cache is updated. The name of this setting can be used when specifying the refresh strategy for another setting. To assign a setting to this cache, set the value of that setting's refresh strategy metadata setting to interval:timeout=COMMERCE/Cache/Cache_1. For more information, see the Configuration section of the Commerce Manager User Guide.</description>
    <default_value type="Integer">300000</default_value>
    <max_overrides>1</max_overrides>
    <setting_metadata>
        <value key="environmentSpecific">true</value>
    </setting_metadata>
</configuration_setting>

<configuration_setting>
    <name_space>COMMERCE/SYSTEM/digitalAssetEncryptionKey</name_space>
    <description>The encryption key used to encrypt the URLs of digital assets. The key must be at least 25 characters long.</description>
    <default_value type="String">digital asset encryption key must be changed in production</default_value>
    <max_overrides>1</max_overrides>
    <setting_metadata>
        <value key="environmentSpecific">true</value>
    </setting_metadata>
</configuration_setting>

<configuration_setting>
    <name_space>COMMERCE/SEARCH/minimumResultsThreshold</name_space>
    <description>Used by the spell checker. Results that are below or equal to this number will trigger a spelling suggestion lookup.</description>
    <default_value type="Integer">10</default_value>
    <max_overrides>-1</max_overrides>
    <setting_metadata>
        <value key="environmentSpecific">false</value>
        <value key="apiRefreshStrategy">interval:timeout=COMMERCE/Cache/Cache_1</value>
    </setting_metadata>
</configuration_setting>

<configuration_setting>
    <name_space>COMMERCE/SEARCH/prefixLength</name_space>
    <description>Used for fuzzy searching. Specifies the number of characters at the start of the search term that must be the same in potential matches.</description>
    <default_value type="Integer">0</default_value>
    <max_overrides>-1</max_overrides>
    <setting_metadata>
        <value key="environmentSpecific">false</value>
        <value key="apiRefreshStrategy">interval:timeout=COMMERCE/Cache/Cache_1</value>
    </setting_metadata>
</configuration_setting>

<configuration_setting>
    <name_space>COMMERCE/SEARCH/minimumSimilarity</name_space>
    <description>Used for fuzzy searching. This specifies how similar a term must be in order to match the query term. It must be set to a value between 0 and 1, not inclusive. (1 means it must be an exact match and 0 means the terms do not need to match at all.)</description>
    <default_value type="BigDecimal">0.75</default_value>
    <max_overrides>-1</max_overrides>
    <setting_metadata>
        <value key="environmentSpecific">false</value>
        <value key="apiRefreshStrategy">interval:timeout=COMMERCE/Cache/Cache_1</value>
    </setting_metadata>
</configuration_setting>

<configuration_setting>
    <name_space>COMMERCE/SEARCH/maxReturnNumber</name_space>
    <description>The maximum number of matching items to include in search results. The default is 0, which specifies no limit.</description>
    <default_value type="Integer">0</default_value>
    <max_overrides>-1</max_overrides>
    <setting_metadata>
        <value key="environmentSpecific">false</value>
        <value key="apiRefreshStrategy">interval:timeout=COMMERCE/Cache/Cache_1</value>
    </setting_metadata>
</configuration_setting>

<configuration_setting>
    <name_space>COMMERCE/SEARCH/excludeAttributes</name_space>
    <description>Specifies a comma-separated list of attribute keys that should be not be included when searching all fields. For example: "A00981,A01012"</description>
    <default_value type="Collection"></default_value>
    <max_overrides>-1</max_overrides>
    <setting_metadata>
        <value key="environmentSpecific">false</value>
        <value key="apiRefreshStrategy">interval:timeout=COMMERCE/Cache/Cache_1</value>
    </setting_metadata>
</configuration_setting>

<configuration_setting>
    <name_space>COMMERCE/SYSTEM/ASSETS/themesSubfolder</name_space>
    <description>The name of the subfolder within the assets directory that contains store themes.</description>
    <default_value type="String">themes</default_value>
    <max_overrides>1</max_overrides>
    <setting_metadata>
        <value key="environmentSpecific">false</value>
        <value key="apiRefreshStrategy">application</value>
    </setting_metadata>
</configuration_setting>

<configuration_setting>
    <name_space>COMMERCE/SEARCH/maximumResultsThreshold</name_space>
    <description>Used by the spell checker. Results that are above or equal to this number will trigger a spelling suggestion lookup.</description>
    <default_value type="Integer">10000</default_value>
    <max_overrides>-1</max_overrides>
    <setting_metadata>
        <value key="environmentSpecific">false</value>
        <value key="apiRefreshStrategy">interval:timeout=COMMERCE/Cache/Cache_1</value>
    </setting_metadata>
</configuration_setting>

<configuration_setting>
    <name_space>COMMERCE/SEARCH/maximumSuggestionsPerWord</name_space>
    <description>Used by the spell checker. The maximum number of spelling suggestions to return.</description>
    <default_value type="Integer">3</default_value>
    <max_overrides>-1</max_overrides>
    <setting_metadata>
        <value key="environmentSpecific">false</value>
        <value key="apiRefreshStrategy">interval:timeout=COMMERCE/Cache/Cache_1</value>
    </setting_metadata>
</configuration_setting>

<configuration_setting>
    <name_space>COMMERCE/SEARCH/accuracy</name_space>
    <description>Sets the accuracy of spelling suggestions. This value works the same as COMMERCE/SEARCH/minimumSimilarity.</description>
    <default_value type="BigDecimal">0.75</default_value>
    <max_overrides>-1</max_overrides>
    <setting_metadata>
        <value key="environmentSpecific">false</value>
        <value key="apiRefreshStrategy">interval:timeout=COMMERCE/Cache/Cache_1</value>
    </setting_metadata>
</configuration_setting>

<configuration_setting>
    <name_space>COMMERCE/SEARCH/boosts</name_space>
    <description>A comma-separated list of field name/value pairs that attribute greater importance to values matched in specific fields. For example: "categoryCode=0.5,productCode=0.5,categoryName_en=2.0,description_en=0.2". By default, all fields have a boost value of 1.0.</description>
    <default_value type="Map"></default_value>
    <max_overrides>-1</max_overrides>
    <setting_metadata>
        <value key="environmentSpecific">false</value>
        <value key="apiRefreshStrategy">interval:timeout=COMMERCE/Cache/Cache_1</value>
    </setting_metadata>
</configuration_setting>

<configuration_setting>
    <name_space>COMMERCE/SYSTEM/CONTENTWRAPPERS/reloadInterval</name_space>
    <description>Specifies how often the content wrapper XML files and templates (*.cwt) are reloaded (in seconds).</description>
    <default_value type="Integer">600</default_value>
    <max_overrides>1</max_overrides>
    <setting_metadata>
        <value key="environmentSpecific">true</value>
        <value key="apiRefreshStrategy">interval:timeout=COMMERCE/Cache/Cache_1</value>
    </setting_metadata>
</configuration_setting>

<configuration_setting>
    <name_space>COMMERCE/SYSTEM/CHANGESETS/enable</name_space>
    <description>Determines whether change sets are enabled. When set to true, CM users can add objects to a change set to prevent others from editing them. Setting this to false will disable the feature.</description>
    <default_value type="Boolean">false</default_value>
    <max_overrides>1</max_overrides>
    <setting_metadata>
        <value key="environmentSpecific">false</value>
        <value key="apiRefreshStrategy">interval:timeout=COMMERCE/Cache/Cache_1</value>
    </setting_metadata>
</configuration_setting>

<configuration_setting>
    <name_space>COMMERCE/SYSTEM/IMPORT/importJobMaxAge</name_space>
    <description>The maximum age (in seconds) a completed import job will remain in the database before it is deleted by the import job clean-up processor.</description>
    <default_value type="Integer">172800</default_value>
    <max_overrides>1</max_overrides>
    <setting_metadata>
        <value key="environmentSpecific">false</value>
        <value key="apiRefreshStrategy">interval:timeout=COMMERCE/Cache/Cache_1</value>
    </setting_metadata>
</configuration_setting>

<configuration_setting>
    <name_space>COMMERCE/SYSTEM/emailEnabled</name_space>
    <description>Specifies whether email is enabled. If set to false, the system does not send any email (order confirmations, password changes, etc.) If it is set to true, the system will attempt to send email as required. Make sure all other email related settings are set correctly when this setting is true, otherwise an error will occur when attempting to send email.</description>
    <default_value type="Boolean">true</default_value>
    <max_overrides>1</max_overrides>
    <setting_metadata>
        <value key="environmentSpecific">false</value>
    </setting_metadata>
</configuration_setting>

<configuration_setting>
    <name_space>COMMERCE/SYSTEM/ASSETS/contentWrappersLocation</name_space>
    <description>The name of the subfolder within the assets directory that contains the Content Wrapper XML and CWT files.</description>
    <default_value type="String">content-wrappers</default_value>
    <max_overrides>1</max_overrides>
    <setting_metadata>
        <value key="environmentSpecific">false</value>
        <value key="apiRefreshStrategy">interval:timeout=COMMERCE/Cache/Cache_1</value>
    </setting_metadata>
</configuration_setting>

<configuration_setting>
    <name_space>COMMERCE/SYSTEM/IMPORT/staleImportJobTimeout</name_space>
    <description>The period of time (in minutes) before an import job is considered stale.</description>
    <default_value type="Integer">5</default_value>
    <max_overrides>1</max_overrides>
    <setting_metadata>
        <value key="environmentSpecific">false</value>
        <value key="apiRefreshStrategy">interval:timeout=COMMERCE/Cache/Cache_1</value>
    </setting_metadata>
</configuration_setting>

<configuration_setting>
    <name_space>COMMERCE/SEARCH/indexOptimizationInterval</name_space>
    <description>Specifies how often (in minutes) the index specified in the context is optimized. Optimization is only required after an index is updated, so if the index is updated frequently, you may want to optimize more frequently by specifying a lower value. Note that the repeatInterval property of the optimizeSearchIndicesTrigger bean determines the smallest interval between index optimizations. If indexOptimizationInterval is less than repeatInterval, then the effective interval will be the repeatInterval. For more information, see the topic on Scheduled Jobs in the Deployment Guide.</description>
    <default_value type="Integer">720</default_value>
    <max_overrides>-1</max_overrides>
    <setting_metadata/>
</configuration_setting>

<configuration_setting>
    <name_space>COMMERCE/APPSPECIFIC/RCP/PRICING/maximumBaseAmounts</name_space>
    <description>The maximum number of base amount rows to display in the pricing editor.</description>
    <default_value type="Integer">1000</default_value>
