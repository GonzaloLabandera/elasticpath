<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:util="http://www.springframework.org/schema/util"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
   			http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-3.0.xsd">

    <!-- If you have Spring configuration that exists solely for the Web Application, define it here. -->
    <!-- Otherwise you should look into adding it to ep-core-plugin.xml in your core extension jar. -->

	<util:map id="persistencePropertyOverrides" key-type="java.lang.String">
		<entry key="openjpa.QueryCache" value="ehcache" />
	</util:map>

</beans>
