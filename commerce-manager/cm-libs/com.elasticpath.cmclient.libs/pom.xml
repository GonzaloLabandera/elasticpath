	<artifactId>com.elasticpath.cmclient.libs</artifactId>
	<packaging>bundle</packaging>
	<name>CM OSGi Wrapper For 3rd Party Libs</name>
	<description>A bucket of JAR files wrapped with an OSGi manifest for use within CM's OSGi environment.</description>

	<build>
		<plugins>
			<plugin>
				<artifactId>maven-antrun-plugin</artifactId>
			</plugin>
			<plugin>
				<groupId>org.apache.felix</groupId>
				<artifactId>maven-bundle-plugin</artifactId>
				<configuration>
					<instructions>
						<Eclipse-BuddyPolicy>registered</Eclipse-BuddyPolicy>
						<Bundle-Name>%pluginName</Bundle-Name>
						<Bundle-Vendor>%pluginProvider</Bundle-Vendor>
						<Embed-Dependency>!(ep-core|ep-base|ep-cache|ep-money|ep-persistence-api|ep-persistence-openjpa|ep-settings|ep-converters|javax.servlet-api
							|stax-api);scope=compile|runtime</Embed-Dependency>
						<Embed-Transitive>true</Embed-Transitive>
						<_exportcontents>
							com.elasticpath.ql.custom.category,
							com.elasticpath.ql.parser.querybuilder,
							com.elasticpath.ql.parser.query,
							com.elasticpath.ql.parser,
							com.elasticpath.ql.parser.gen,
							com.elasticpath.search.searchengine,
							com.elasticpath.ql.custom.setting,
							com.elasticpath.ql.parser.fieldresolver,
							com.elasticpath.ql.parser.valueresolver,
							com.elasticpath.ql.custom.promotion,
							com.elasticpath.ql.custom.pricelist,
							com.elasticpath.ql.custom.product,
							com.elasticpath.ql.custom.catalog,
							com.elasticpath.plugin.*,
							com.elasticpath.messaging.*,
							com.elasticpath.core.messaging.*,
							com.elasticpath.repo.*,
							com.elasticpath.health.monitoring.*,
							com.elasticpath.domain.rules.impl;x-internal:=true,
							com.elasticpath.domain.discounts.impl;x-internal:=true,
							com.elasticpath.commons.beanframework,
							com.elasticpath.commons.beanframework.spring,
							com.elasticpath.commons.constants,
							com.elasticpath.domain.shipping,
							com.elasticpath.service.shipping,
							com.elasticpath.service.shipping.transformers,
							com.elasticpath.service.shipping.transformers.visitors,
							com.elasticpath.shipping.connectivity.commons,
							com.elasticpath.shipping.connectivity.commons.constants,
							com.elasticpath.shipping.connectivity.service,
							com.elasticpath.shipping.connectivity.dto,
							com.elasticpath.shipping.connectivity.dto.builder,
							com.elasticpath.shipping.connectivity.dto.builder.populators,
							*.impl,
							!com.elasticpath.*,
							*
						</_exportcontents>
					</instructions>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-checkstyle-plugin</artifactId>
				<configuration>
					<skip>true</skip>
				</configuration>
			</plugin>
		</plugins>
	</build>

