<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>com.elasticpath.cmclient</groupId>
		<artifactId>cm-libs</artifactId>
		<version>702.0.0-SNAPSHOT</version>
	</parent>

	<artifactId>com.elasticpath.cmclient.libs</artifactId>
	<packaging>bundle</packaging>
	<name>CM OSGi Wrapper For 3rd Party Libs</name>
	<description>A bucket of JAR files wrapped with an OSGi manifest for use within CM's OSGi environment.</description>

	<properties>
		<ep.health.monitoring.version>1.1.2.20171228014437-844ef</ep.health.monitoring.version>
	</properties>

	<build>
		<plugins>
			<plugin>
				<artifactId>maven-antrun-plugin</artifactId>
			</plugin>
			<plugin>
				<groupId>org.apache.felix</groupId>
				<artifactId>maven-bundle-plugin</artifactId>
				<configuration>
					<instructions>
						<Eclipse-BuddyPolicy>registered</Eclipse-BuddyPolicy>
						<Bundle-Name>%pluginName</Bundle-Name>
						<Bundle-Vendor>%pluginProvider</Bundle-Vendor>
						<Embed-Dependency>!(ep-core|ep-base|ep-cache|ep-money|ep-persistence-api|ep-persistence-openjpa|ep-settings|javax.servlet-api
							|stax-api);scope=compile|runtime</Embed-Dependency>
						<Embed-Transitive>true</Embed-Transitive>
						<_exportcontents>
							com.elasticpath.ql.custom.category,
							com.elasticpath.ql.parser.querybuilder,
							com.elasticpath.ql.parser.query,
							com.elasticpath.ql.parser,
							com.elasticpath.ql.parser.gen,
							com.elasticpath.search.searchengine,
							com.elasticpath.ql.custom.setting,
							com.elasticpath.ql.parser.fieldresolver,
							com.elasticpath.ql.parser.valueresolver,
							com.elasticpath.ql.custom.promotion,
							com.elasticpath.ql.custom.pricelist,
							com.elasticpath.ql.custom.product,
							com.elasticpath.ql.custom.catalog,
							com.elasticpath.plugin.*,
							com.elasticpath.messaging.*,
							com.elasticpath.core.messaging.*,
							com.elasticpath.repo.*,
							com.elasticpath.domain.rules.impl;x-internal:=true,
							com.elasticpath.domain.discounts.impl;x-internal:=true,
							*.impl,
							!com.elasticpath.*,
							*
						</_exportcontents>
					</instructions>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-checkstyle-plugin</artifactId>
				<configuration>
					<skip>true</skip>
				</configuration>
			</plugin>
		</plugins>
	</build>

	<dependencies>

		<!-- ${project.version} seems to pull the version relative to the project it is in so explicitly specifying the version of core, ql and so here seems to be necessary -->
		<dependency>
			<groupId>com.elasticpath</groupId>
			<artifactId>ep-core</artifactId>
			<exclusions>
