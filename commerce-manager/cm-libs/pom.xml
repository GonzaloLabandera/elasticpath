<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>com.elasticpath</groupId>
		<artifactId>commerce-parent</artifactId>
		<version>703.0.0-SNAPSHOT</version>
		<relativePath>../../pom.xml</relativePath>
	</parent>

	<groupId>com.elasticpath.cmclient</groupId>
	<artifactId>cm-libs</artifactId>
	<version>703.0.0-SNAPSHOT</version>
	<packaging>pom</packaging>
	<name>CM Libs Parent</name>

	<properties>
		<osgi-version-qualifier>${maven.build.timestamp}</osgi-version-qualifier>
		<maven.build.timestamp.format>yyyyMMdd-HHmm</maven.build.timestamp.format>
	</properties>

	<build>
		<pluginManagement>
			<plugins>
				<plugin>
					<artifactId>maven-antrun-plugin</artifactId>
					<executions>
						<execution>
							<id>copy-dependencies</id>
							<goals>
								<goal>run</goal>
							</goals>
							<phase>process-sources</phase>
							<configuration>
								<target>
									<dependencyfilesets prefix="deps." />
									<mkdir dir="${basedir}/${dependency.directory}" />
									<copy todir="${basedir}/${dependency.directory}">
										<fileset refid="deps.maven.project.dependencies" />
										<compositemapper>
											<regexpmapper from="^.*[\\/](.*)(\d{8}\.\d+-\d+)(.*)$$" to="\1SNAPSHOT\3" />
											<flattenmapper />
										</compositemapper>
									</copy>
								</target>
							</configuration>
						</execution>
					</executions>
				</plugin>
				<plugin>
					<groupId>org.apache.felix</groupId>
					<artifactId>maven-bundle-plugin</artifactId>
					<extensions>true</extensions>
					<configuration>
						<rebuildBundle>true</rebuildBundle>
						<instructions>
							<Bundle-SymbolicName>${project.artifactId}</Bundle-SymbolicName>
							<_nouses>true</_nouses>
							<_snapshot>${osgi-version-qualifier}</_snapshot>
							<_nodefaultversion>true</_nodefaultversion>
							<Bundle-RequiredExecutionEnvironment>JavaSE-1.6</Bundle-RequiredExecutionEnvironment>
							<Import-Package>!*</Import-Package>
							<Embed-Directory>${dependency.directory}</Embed-Directory>
							<Bundle-Localization>plugin</Bundle-Localization>
						</instructions>
					</configuration>
				</plugin>
			</plugins>
		</pluginManagement>

		<plugins>
			<plugin>
				<artifactId>maven-invoker-plugin</artifactId>
				<version>${maven.invoker.plugin.version}</version>
				<executions>
					<execution>
						<id>build-cm-tycho-projects</id>
						<goals>
							<goal>run</goal>
						</goals>
						<configuration>
						<skipInvocation>true</skipInvocation>
						</configuration>
					</execution>
				</executions>
				<inherited>true</inherited>
			</plugin>
			<plugin>
				<artifactId>maven-clean-plugin</artifactId>
				<configuration>
					<filesets>
						<fileset>
							<directory>lib</directory>
						</fileset>
					</filesets>
				</configuration>
			</plugin>
		</plugins>
	</build>

	<profiles>
		<profile>
			<id>m2e-lifecycle-mapping</id>
			<activation>
				<property>
					<name>m2e.version</name>
				</property>
			</activation>
			<properties>
				<osgi-version-qualifier>qualifier</osgi-version-qualifier>
			</properties>
			<build>
				<pluginManagement>
					<plugins>
						<plugin>
							<groupId>org.apache.felix</groupId>
							<artifactId>maven-bundle-plugin</artifactId>
							<configuration>
								<!-- PDE doesn't honour custom manifest locations. -->
								<manifestLocation>META-INF</manifestLocation>
							</configuration>
						</plugin>
					</plugins>
				</pluginManagement>
			</build>
		</profile>
	</profiles>

	<modules>
		<module>com.elasticpath.cmclient.libs</module>
		<module>com.elasticpath.cmclient.testlibs</module>
	</modules>

</project>
