<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>
   <extension
         point="com.elasticpath.cmclient.core.authorizations">
      <permissions>
         <permission
               activityId="com.elasticpath.cmclient.reporting.authorizations.activity"
               key="REPORTING_PROMOTION_DETAILS_MANAGE"
               name="%promotionDetailsReportPermission">
         </permission>
      </permissions>
   </extension>
   <extension
         point="com.elasticpath.cmclient.reporting.reports">
      <report
            class="com.elasticpath.cmclient.reporting.promotiondetails.PromotionDetailsReportSection"
            designFile="reportDesign/PromotionDetails.rptdesign"
            id="com.elasticpath.cmclient.reporting.promotiondetails.PromotionDetailsReportSection"
            name="%report.name">
      </report>
   </extension>

</plugin>
